<h2><%= link_to @post.title, @post.url %></h2>
<p><%= @post.content %></p>

<% if @post.author_id == current_user.id %>
  <%= link_to "Edit Post", edit_post_url(@post) %>
  <%= link_to "Delete Post", post_url(@post), method: :delete %>
<% end %>

<%= render @comments %>
<%= link_to "Add Comment", new_post_comment_url(@post) %>
